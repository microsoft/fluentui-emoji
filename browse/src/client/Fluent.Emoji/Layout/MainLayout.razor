@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@IsDarkTheme"
                  Theme="_theme" />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.Small"
                   CloseButton="true"
                   DisableBackdropClick="false"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<HeadContent>
    <ConditionalHeadContent IsDarkTheme="@IsDarkTheme" />
</HeadContent>

<MudLayout>
    <MudAppBar Elevation="10">
        <MudIcon Icon="@Icons.Custom.Brands.Microsoft" Size="Size.Large" Color="Color.Inherit" />
        <MudText Typo="Typo.h5" Class="ml-3">Fluent Emoji</MudText>
        <MudSpacer />
        <MudTooltip Duration="1_000" Text=@ThemeIconText Arrow=true Placement="Placement.Left">
            <MudIconButton Size="Size.Large" Color="@Color.Inherit"
                           Icon="@ThemeIcon" OnClick="OnToggleDarkMode" />
        </MudTooltip>
        <MudTooltip Duration="1_000" Text="Open the GitHub Microsoft Fluent Emoji repository link (in new tab)?" Arrow=true Placement="Placement.Left">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit"
                           Size="Size.Large" Target="_blank"
                           Href="https://github.com/microsoft/fluentui-emoji" />
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body
            <MudScrollToTop Style="z-index:2000;">
                <MudFab Color="Color.Secondary" IconSize="Size.Large"
                        StartIcon="@Icons.Material.TwoTone.ArrowUpward" />
            </MudScrollToTop>
        </MudContainer>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudToolBar DisableGutters="true" Dense="true">
                <MudText Typo="Typo.body1">Copyright © @DateTime.Now.Year Microsoft—Fluent Emoji.</MudText>
                <MudSpacer />
                <MudText Typo="Typo.body1">Powered by .NET @Environment.Version.ToString()</MudText>
            </MudToolBar>
        </MudContainer>
    </MudMainContent>
</MudLayout>